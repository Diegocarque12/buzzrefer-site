<section class="max-w-6xl mx-auto px-6 md:px-12 py-12 md:py-24">
  <div class="bg-teal-100/50 rounded-3xl p-8 md:p-12">
    <div class="grid md:grid-cols-2 gap-12">
      <!-- Left: Info -->
      <div>
        <p class="text-xs uppercase tracking-wider text-teal-700 font-bold mb-2">Contact Us</p>
        <h2 class="text-3xl font-bold text-gray-900 mb-6">Get in touch today</h2>
        
        <p class="text-sm text-gray-600 mb-2 max-w-xs">
          To learn more about our system and how you can earn, feel free to contact us.
        </p>
        
        <div class="mt-8 space-y-4">
           <div>
               <p class="font-bold text-teal-900 text-sm flex items-center gap-2">
                   <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" /></svg>
                   hello@buzzrefer.com
               </p>
           </div>
           <div>
               <p class="font-bold text-teal-900 text-sm flex items-center gap-2">
                   <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" /></svg>
                   +1 (555) 123-4567
               </p>
           </div>
           <div>
               <p class="font-bold text-teal-900 text-sm flex items-center gap-2">
                   <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" /></svg>
                   123 Referral St, TX
               </p>
           </div>
        </div>
      </div>

      <!-- Right: Form -->
      <form class="space-y-6">
        <div class="grid grid-cols-2 gap-6">
            <div>
                <label class="block text-xs font-semibold text-gray-700 mb-1">Full Name</label>
                <input type="text" placeholder="John Doe" class="w-full border-b border-gray-400 px-0 py-2 text-sm focus:outline-none focus:border-teal-500 bg-transparent" />
            </div>
             <div>
                <label class="block text-xs font-semibold text-gray-700 mb-1">Subject</label>
                <input type="text" placeholder="I want to sign up" class="w-full border-b border-gray-400 px-0 py-2 text-sm focus:outline-none focus:border-teal-500 bg-transparent" />
            </div>
        </div>
        
        <div class="grid grid-cols-2 gap-6">
             <div>
                <label class="block text-xs font-semibold text-gray-700 mb-1">Email</label>
                <input type="email" placeholder="john.doe@gmail.com" class="w-full border-b border-gray-400 px-0 py-2 text-sm focus:outline-none focus:border-teal-500 bg-transparent" />
            </div>
             <div>
                <label class="block text-xs font-semibold text-gray-700 mb-1">Action</label>
                <input type="text" placeholder="Inquiry" class="w-full border-b border-gray-400 px-0 py-2 text-sm focus:outline-none focus:border-teal-500 bg-transparent" />
            </div>
        </div>
        
         <div>
          <label class="block text-xs font-semibold text-gray-700 mb-1">Message</label>
          <textarea rows="3" placeholder="I want to query about your price..." class="w-full border-b border-gray-400 px-0 py-2 text-sm focus:outline-none focus:border-teal-500 bg-transparent resize-none"></textarea>
        </div>

        <button type="submit" class="bg-teal-900 text-white px-8 py-3 rounded-md text-sm font-semibold hover:bg-teal-800 transition-colors shadow-lg">
          Submit â†’
        </button>
      </form>
    </div>
  </div>
</section>
